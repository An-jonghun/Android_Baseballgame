<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="@drawable/background">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="60"
        android:background="@drawable/baseball_field">

        <TextView
            android:id="@+id/result_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4DFFFFFF"
            android:textColor="#3C3A3A"
            android:textSize="24sp"
            android:textStyle="bold" />
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="16"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_margin="10dp"
        android:gravity="center">

        <TextView
            android:id="@+id/input_text_view_0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:background="@drawable/ball"
            android:gravity="center"
            android:textSize="70sp"
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/input_text_view_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:background="@drawable/ball"
            android:gravity="center"
            android:layout_margin="5dp"
            android:textSize="70sp"
            android:textColor="#000000"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/input_text_view_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:background="@drawable/ball"
            android:gravity="center"
            android:layout_margin="5dp"
            android:textSize="70sp"
            android:textColor="#000000"
            android:textStyle="bold"/>
    </LinearLayout> //사용자 입력

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:weightSum="6"
        android:layout_margin="5dp">

        <Button
            android:id="@+id/num_button_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="1"
            android:layout_weight="1"
            android:background="@drawable/num_button_select"
            android:textColor="#ffffff"
            android:textSize="35sp"/>
        <Button
            android:id="@+id/num_button_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="2"
            android:layout_weight="1"
            android:background="@drawable/num_button_select"
            android:textColor="#ffffff"
            android:textSize="35sp"/>
        <Button
            android:id="@+id/num_button_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="3"
            android:layout_weight="1"
            android:background="@drawable/num_button_select"
            android:textColor="#ffffff"
            android:textSize="35sp"/>
        <Button
            android:id="@+id/num_button_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="4"
            android:layout_weight="1"
            android:background="@drawable/num_button_select"
            android:textColor="#ffffff"
            android:textSize="35sp"/>
        <Button
            android:id="@+id/num_button_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="5"
            android:layout_weight="1"
            android:background="@drawable/num_button_select"
            android:textColor="#ffffff"
            android:textSize="35sp"/>
        <ImageButton
            android:id="@+id/back_space_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/num_button_select"
            android:textColor="#ffffff"
            android:textSize="35sp"
            android:src="@drawable/back_space_24dp"/>

    </LinearLayout> //첫번쨰 숫자줄

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:weightSum="6"
        android:layout_margin="5dp">

        <Button
            android:id="@+id/num_button_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="6"
            android:layout_weight="1"
            android:background="@drawable/num_button_select"
            android:textColor="#ffffff"
            android:textSize="35sp"/>
        <Button
            android:id="@+id/num_button_7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="7"
            android:layout_weight="1"
            android:background="@drawable/num_button_select"
            android:textColor="#ffffff"
            android:textSize="35sp"/>
        <Button
            android:id="@+id/num_button_8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="8"
            android:layout_weight="1"
            android:background="@drawable/num_button_select"
            android:textColor="#ffffff"
            android:textSize="35sp"/>
        <Button
            android:id="@+id/num_button_9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="9"
            android:layout_weight="1"
            android:background="@drawable/num_button_select"
            android:textColor="#ffffff"
            android:textSize="35sp"/>
        <Button
            android:id="@+id/num_button_0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="0"
            android:layout_weight="1"
            android:background="@drawable/num_button_select"
            android:textColor="#ffffff"
            android:textSize="35sp"/>
        <ImageButton
            android:id="@+id/hit_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/num_button_select"
            android:textColor="#ffffff"
            android:textSize="35sp"
            android:src="@drawable/hit"/>

    </LinearLayout> //두번째 숫자줄


</LinearLayout>